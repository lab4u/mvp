<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="95sp"
	    android:orientation="horizontal"
	    android:paddingTop="12sp"
	    android:paddingBottom="10sp"
	    android:paddingLeft="5sp"
	    android:paddingRight="15sp"
	    android:baselineAligned="true">

    <ImageView
	        android:id="@+id/icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="6dip"
	        android:layout_gravity="center"
	        android:src="@drawable/formula"/>

	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_weight="1" >

        <TextView
	        android:id="@+id/labTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:text="@string/labTitle"
	        android:textColor="#3399ff"
	        android:textSize="12sp"
	        android:textStyle="bold" >
        </TextView>
		   
       <TextView
	        android:id="@+id/labCreationDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2013-01-01"
	        android:textColor="#3399ff"
	        android:textSize="12sp"
	        android:textStyle="bold" >
       </TextView>
       
  	       <TextView
	        android:id="@+id/labContent"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:singleLine="false"
	        android:text="@string/labContent"
	        android:textColor="#3399ff"
	        android:textSize="12sp"
	        android:ellipsize="none"
	        android:maxLines="3"/>
    </LinearLayout>

	<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:src="@drawable/flecha_roja"/>
</LinearLayout>